<%- include('../partials/header') %>
<body id="<%- match._id %>">
    <div class="wrapper shadow">
        <h1 id="heading" data-finished="<%- match.finished %>">Match Kontrolle</h1>
        <hr>
        <section class="match">

            <h3>
                <%- match.team1.name %> vs. <%- match.team2.name %> 
            </h3>
            <% if (!match.finished) { %>
            <div class="row">
                <span class="time" id="clock"></span><br>
                <% if (match.running) { %> <span class="live">live</span> <% } %>
            </div>
            <div class="row">
                <button class="waves-effect waves-light btn" id="toggle" onClick="toggleGame()" data-running="<%- match.running %>"></button>
            </div>
            <hr />
            <% } %>
            <div class="row">
	            <div class="column">
					         <h2 style="display: inline;" id="team1"><%- match.team1Goals %></h2>
                   <h4><%- match.team2.name %></h4>
              </div>
      				<div class="column">
      					<h2 style="display: inline" id="team2"><%- match.team2Goals %></h2>
                <h4><%- match.team1.name %></h4>
      				</div>
      			</div>
            <% if (match.running) { %>
			     <hr />
            <div class="row">
                <div class="column">
                    
                    <button  class="waves-effect waves-light btn goalBtn" onClick="updateGoal(this)" data-team="1" data-operator="add"> + </button>
                    <button  class="waves-effect waves-light btn goalBtn" onClick="updateGoal(this)" data-team="1" data-operator="sub"> - </button>
                </div>
                <div class="column">
                    <button  class="waves-effect waves-light btn goalBtn" onClick="updateGoal(this)" data-team="2" data-operator="add"> + </button>
                    <button  class="waves-effect waves-light btn goalBtn" onClick="updateGoal(this)" data-team="2" data-operator="sub"> - </button>
                </div>
            </div>
          <% } %>
        <hr style="margin-top: 50px;">
        <div class="row">
          <button class="waves-effect waves-light btn orange" onClick="endGame()">
            <% if (match.finished) { %>
              Reopen Match
            <% } else { %>
              Finish Match
            <% } %>
          </button>
        </div>
        </section>



<script src="/assets/js/schiri.js" type="text/javascript"></script>

<%- include('../partials/footer') %>

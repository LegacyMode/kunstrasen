<%- include('../partials/header') %>
<body id="<%- match._id %>">
    <div class="wrapper shadow">
        <h1 id="heading" data-finished="<%- match.finished %>">Match Kontrolle</h1>
        <hr>
        <section class="match">
            <h3>
                <%- match.team1.name %> vs. <%- match.team2.name %>
            </h3>
            <div class="row">
                <span class="time" id="clock"></span>
            </div>
            <div class="row">
                <button class="waves-effect waves-light btn" id="toggle" onClick="toggleGame()" data-running="<%- match.running %>"></button>
                <button class="waves-effect waves-light btn" onClick="endGame()">Finish Game</button>
            </div>
            <hr />
            <div class="row">
	            <div class="column">
					<h2 style="display: inline;" id="team1"><%- match.team1Goals %></h2>
				</div>
				<div class="column">
					<h2 style="display: inline" id="team2"><%- match.team2Goals %></h2>
				</div>
			</div>
			<hr />
            <div class="row">
                <div class="column">
                    <h4><%- match.team1.name %></h4>
                    <button  class="waves-effect waves-light btn" onClick="updateGoal(this)" data-team="1" data-operator="add"> + </button>
                    <button  class="waves-effect waves-light btn" onClick="updateGoal(this)" data-team="1" data-operator="sub"> - </button>
                </div>
                <div class="column">
                    <h4><%- match.team2.name %></h4>
                    <button  class="waves-effect waves-light btn" onClick="updateGoal(this)" data-team="2" data-operator="add"> + </button>
                    <button  class="waves-effect waves-light btn" onClick="updateGoal(this)" data-team="2" data-operator="sub"> - </button>
                </div>
            </div>
        </section>


<script src="/assets/js/schiri.js" type="text/javascript"></script>

<%- include('../partials/footer') %>

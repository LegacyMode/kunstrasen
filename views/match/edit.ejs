<%- include('../partials/header'); %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/timepicker@1.11.12/jquery.timepicker.css">
<body>
  <div class="wrapper shadow">
  <h1>Match</h1>
        <hr>
    <section class="content">
       <h3>Edit</h3>
  <form method="POST" action="/match/<%- match._id %>" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_method" value="PATCH">
    <label for="name">Match: </label>
    <input type="text" id="roundIdentifier" name="roundIdentifier" value="<%- match.roundIdentifier %>">
    <input type="text" id="location" name="location" value="<%- match.location %>">
    <select class="browser-default" name="team1" id="team2">
      <% teams.forEach((team) => { %>
        <option value="<%- team._id %>"
        <% if (String(team._id) == String(match.team1._id)) {%>
          selected
        <% } %>
        ><%- team.name %></option>
      <% }) %>
    </select>
    <select class="browser-default" name="team2" id="team2">
      <% teams.forEach((team) => { %>
        <option value="<%- team._id %>"
        <% if (String(team._id) == String(match.team2._id)) {%>
          selected
        <% } %>
        ><%- team.name %></option>
      <% }) %>
    </select>
    <input type="text" id="timepicker" name="startingTime" placeholder="Pick a Timeslot">
    <input class="waves-effect waves-light btn" type="submit">

  </form>
  <form method="POST" action="/match/<%- match._id %>" enctype="application/x-www-form-urlencoded">
    <div class="row">
      <input type="hidden" name="_method" value="DELETE">
    </div>
    <div class="row">
      <input class="waves-effect waves-light btn" type="submit" value="Delete">
    </div>
  </form>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/timepicker@1.11.12/jquery.timepicker.js"></script>
  <script src="/assets/js/timeedit.js" type="text/javascript"></script>

</section>

<%- include('../partials/footer') %>
